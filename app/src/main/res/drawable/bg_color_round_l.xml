<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape>
            <solid android:color="#0e778a"/>
            <corners android:topRightRadius="5dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>
    <item android:state_focused="true"> <!-- focused -->
        <shape>
            <solid android:color="#0e778a"/>
            <corners android:topRightRadius="5dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>
    <item android:state_enabled="true"> <!-- enabled -->
        <shape>
            <solid android:color="#59c4bc"/>
            <corners android:topRightRadius="5dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>
    <item> <!-- default -->
        <shape>
            <solid android:color="#59c4bc"/>
            <corners android:topRightRadius="5dp"
                android:bottomRightRadius="5dp"/>
        </shape>
    </item>
</selector>
