<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/web_side_padding_vertical_size"
    android:paddingBottom="@dimen/web_side_padding_vertical_size"
    android:paddingLeft="@dimen/web_side_padding_horizontal_size"
    android:paddingRight="@dimen/web_side_padding_horizontal_size"
    >

<!--제목-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_between_component"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <!--매입일-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/web_input_padding_size"
            android:layout_marginRight="@dimen/size_between_component"
            android:text="매입일"
            android:textColor="@color/color_web_text"
            android:textStyle="bold"
            android:textSize="@dimen/web_font_3"
            />
        <!--매출일-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/web_input_padding_size"
            android:layout_marginLeft="@dimen/size_between_component"
            android:text="매출일"
            android:textColor="@color/color_web_text"
            android:textStyle="bold"
            android:textSize="@dimen/web_font_3"
            />
    </LinearLayout>

<!--inputbox-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
<!--매입일-->
        <TextView
            android:id="@+id/btn_purchase_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_weight="1"
            android:padding="@dimen/web_input_padding_size"
            android:background="@drawable/bg_border_web"
            android:layout_marginRight="@dimen/size_between_component"
            android:textColor="@color/color_web_text"
            android:textSize="@dimen/web_font_3"
            android:clickable="true"
            />
<!--매출일-->
        <TextView
            android:id="@+id/btn_sale_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_weight="1"
            android:padding="@dimen/web_input_padding_size"
            android:background="@drawable/bg_border_web"
            android:layout_marginLeft="@dimen/size_between_component"
            android:textColor="@color/color_web_text"
            android:textSize="@dimen/web_font_3"
            android:clickable="true"
            />
    </LinearLayout>

<!--제목-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <!--매입일-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/web_input_padding_size"
            android:layout_marginRight="@dimen/size_between_component"
            android:text="매입처"
            android:textColor="@color/color_web_text"
            android:textStyle="bold"
            android:textSize="@dimen/web_font_3"
            />
        <!--매출일-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/web_input_padding_size"
            android:layout_marginLeft="@dimen/size_between_component"
            android:text="매출처"
            android:textColor="@color/color_web_text"
            android:textStyle="bold"
            android:textSize="@dimen/web_font_3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
        <!--매입처-->
        <RelativeLayout
            android:id="@+id/btn_purchase"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_weight="1"
            android:padding="@dimen/web_input_padding_size"
            android:background="@drawable/bg_border_web"
            android:layout_marginRight="@dimen/size_between_component"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/txt_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_web_text"
                android:textSize="@dimen/web_font_3"
                />
            <ImageView
                android:layout_width="@dimen/web_select_icon_size"
                android:layout_height="@dimen/web_select_icon_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_selectbox"
                android:scaleType="centerInside"
                />
        </RelativeLayout>
        <!--매출처-->
        <RelativeLayout
            android:id="@+id/btn_sales"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_weight="1"
            android:padding="@dimen/web_input_padding_size"
            android:layout_marginLeft="@dimen/size_between_component"
            android:background="@drawable/bg_border_web"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/txt_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/color_web_text"
                android:textSize="@dimen/web_font_3"
                />
            <ImageView
                android:layout_width="@dimen/web_select_icon_size"
                android:layout_height="@dimen/web_select_icon_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_selectbox"
                android:scaleType="fitCenter"
                />
        </RelativeLayout>
    </LinearLayout>

    <!--제목-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/web_input_padding_size"
            android:layout_marginRight="@dimen/size_between_component"
            android:text="입고"
            android:textColor="@color/color_web_text"
            android:textStyle="bold"
            android:textSize="@dimen/web_font_3"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone"
        >

<!--입고품목-->
        <RelativeLayout
            android:id="@+id/btn_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_weight="1"
            android:padding="@dimen/web_input_padding_size"
            android:background="@drawable/bg_border_web"
            android:layout_marginRight="@dimen/size_between_component"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/txt_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_alignParentLeft="true"
                android:text="입고 품목"
                android:textColor="@color/color_web_text"
                android:textSize="@dimen/web_font_3"
                />
            <ImageView
                android:layout_width="@dimen/web_select_icon_size"
                android:layout_height="@dimen/web_select_icon_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_selectbox"
                android:scaleType="centerInside"
                />
        </RelativeLayout>
<!--입고창고-->
        <RelativeLayout
            android:id="@+id/btn_store"
            android:layout_width="match_parent"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_weight="1"
            android:padding="@dimen/web_input_padding_size"
            android:layout_marginRight="@dimen/size_between_component"
            android:background="@drawable/bg_border_web"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/txt_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="입고 창고"
                android:textColor="@color/color_web_text"
                android:textSize="@dimen/web_font_3"
                />
            <ImageView
                android:layout_width="@dimen/web_select_icon_size"
                android:layout_height="@dimen/web_select_icon_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ico_selectbox"
                android:scaleType="fitCenter"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_add_item"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/web_input_height_size"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:background="@drawable/bg_border_web"
            android:clickable="true"
            >
            <ImageView
                android:id="@+id/btn_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ico_puchase_btn"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/btn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/btn_icon"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:text="상품 추가"
                android:textColor="@color/color_web_text"
                android:textSize="@dimen/web_font_3"
                />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
